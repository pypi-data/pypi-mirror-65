<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="css/description.xslt"?>
<description xmlns="http://www.ge.fr/schema/1.2/form-manager" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    {% if 'icon' in description %} icon="{{description.icon}}"
    {% else %} icon="map-signs" {% endif %} 
    color="{{description.color}}" version="1.2" xsi:schemaLocation="http://www.ge.fr/schema/1.2/form-manager http://svn.projet-ge.fr:8080/archiva/repository/xsd/form-manager/form-manager/1.2/form-manager-1.2.xsd">
    <reference-id>{{description.name}}</reference-id>
    <title>{{description.title}}</title>
    <description>{{description.description}}</description>
    <steps>
        <step id="data" data="display.xml" postprocess="redirect.xml" icon="{{description.icon}}">
            <saveQuit display="no"/>
            <nextPage display="no"/>
            <nextStep display="yes"  label="{{display.button}}"/>
            <finalize display="no" />
            <previous display="no"/>
        </step>
        <step id="error" data="_error_display.xml" icon="arrows-alt">
            <saveQuit display="no"/>
            <nextPage display="no"/>
            <nextStep display="no"/>
            <finalize display="no"/>
            <previous display="yes" {% if 'button_retry' in display %}label="{{display.button_retry}}" {% endif %}/>
        </step>
    </steps>
</description>
