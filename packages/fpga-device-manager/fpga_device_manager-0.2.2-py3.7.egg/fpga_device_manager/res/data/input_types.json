{
  "1": {
    "name": "Button",
    "description": "An input device that sends a signal as long as it is active, and another when it is not. Generally used with a switch.",
    "driver": "In_Button",
    "uses_clk": true,
    "compatible_devices": [1],
    "pins": {
      "signal": {
        "active_low": false
      }
    }
  },
