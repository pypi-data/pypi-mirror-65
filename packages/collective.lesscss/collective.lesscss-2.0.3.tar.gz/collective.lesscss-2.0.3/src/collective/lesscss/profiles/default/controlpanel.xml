<?xml version="1.0"?>
<object name="portal_controlpanel" meta_type="Plone Control Panel Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.lesscss"
    purge="False">

    <configlet title="LESS Stylesheets Tool"
        action_id="lesscss"
        appId="collective.lesscss"
        category="Products"
        condition_expr="python:True"
        url_expr="string:${portal_url}/lesscss-controlpanel"
        icon_expr="string:$portal_url/lessconfiglet.png"
        visible="True">
        <permission>Manage portal</permission>
    </configlet>

</object>
